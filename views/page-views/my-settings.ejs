<form>
    <input type="hidden" value="<%= user.user_id %>" />
    <dl class="form-group">
        <dt>
            <label>昵称</label>
        </dt>
        <dd>
            <input class="form-control" type="text" placeholder="请输入用户名" value="<%= user.user_name %>" />
        </dd>
    </dl>
    <dl class="form-group">
        <dt>
            <label>邮箱</label>
            </dt>
        <dd>
            <input class="form-control" type="text" placeholder="请输入邮箱账号" value="<%= user.email %>" />
            <!--<textarea></textarea>-->
        </dd>
    </dl>
    <dl class="form-group">
        <dt>
            <label>密码</label>
            </dt>
        <dd>
            <input class="form-control" type="password" placeholder="请输入密码" />
            <!--<textarea></textarea>-->
        </dd>
    </dl>
    <dl class="form-group">
        <dt>
            <label>确认密码</label>
        </dt>
        <dd>
            <input class="form-control" type="password" placeholder="请确认密码" />
            <!--<textarea></textarea>-->
        </dd>
    </dl>
    <button class="btn submit-btn">保存</button>
</form>